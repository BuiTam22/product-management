extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/table-tree.pug

block main
  if(role.permissions.includes("posts_view"))
    h1(class="mb-4") Danh mục bài viết
    +alert-success(3000)
    +alert-error(3000)
    .card.mb-3
      .card-header Danh sách
      .card-body
        .row
          .col-8
          .col-4.text-right
            if(role.permissions.includes("posts_create"))
              a(
                href=`/${prefixAdmin}/posts-category/create`
                class="btn btn-outline-success"
              ) + Thêm mới

        table(
          class="table table-hover table-sm"
        )
          thead
            tr
              th STT
              th Hình ảnh
              th Tiêu đề
              th Vị trí
              th Trạng thái
              th Người chỉnh sửa
              th Người tạo
              th Hành động

          tbody
            +table-tree(records, "posts-category")
            form(
              id="form-change-status"
              method="POST"
              action=""
              data-path=`/${prefixAdmin}/posts-category/change-status`
            )
            form(
              id="form-delete-item"
              method="POST"
              action=""
              data-path=`/${prefixAdmin}/posts-category/delete`
            )
  else 
    h1 Không có quyền xem trang này, vui lòng quay lại!